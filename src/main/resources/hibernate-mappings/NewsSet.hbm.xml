<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" default-cascade="all-delete-orphan">
    
    <class name="org.jasig.portlet.newsreader.NewsSet" table="NEWS_SET">
        
        <!-- unique id -->
        <id name="id" type="long" unsaved-value="-1">
            <column name="SET_ID" not-null="true"/>
            <generator class="native"/>
        </id>
        
        <!-- display name -->
        <property name="name" type="string">
            <column name="NEWS_NAME" length="100"/>
        </property>

        <!-- user id --> 
        <property name="userId" type="string">
            <column name="USER_ID" length="50"/>
        </property>

        <set name="newsConfigurations" inverse="true" cascade="all">
            <key column="SET_ID"/>
            <one-to-many
                class="org.jasig.portlet.newsreader.NewsConfiguration"/>
        </set>
        
    </class>
    
</hibernate-mapping>
